- content_for :head do
  %link{:rel => "stylesheet", :href => "/stylesheets/norobot.css"}

%h1 Sign up for a free Robot Mailer account
%br
- form_for(@mailer_signup) do |f|
  = f.error_messages

  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :company_name
    %br
    = f.text_field :company_name
  %p
    = f.label :contact_name
    %br
    = f.text_field :contact_name
  %p
    = f.label :country
    %br
    = f.select :country, @countries
  %p
    = f.label :timezone
    %br
    = f.select :timezone, @timezones
  %p
    = f.submit 'Create Account'
