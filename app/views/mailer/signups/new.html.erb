<h1>Sign up for a free account</h1>

<% form_for(@mailer_signup) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name %>
  </p>
  <p>
    <%= f.label :contact_name %><br />
    <%= f.text_field :contact_name %>
  </p>
	<p>
		<%= f.label :country %><br />
		<%= f.select :country, @countries %>
	</p>
	<p>
		<%= f.label :timezone %><br />
		<%= f.select :timezone, @timezones %>
	</p>
  <p>
    <%= f.submit 'Create Account' %>
  </p>
<% end %>
