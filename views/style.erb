body {
	background: #333;
	margin: 0;
	padding: 0;
}

p, li {
	font-size: 14px;
	line-height: 1.4em;
	font-family: verdana;
	margin: 0 0 12px 0;
	font-weight: normal;
}

ul {
	margin: 10px 0;
	padding: 0 0 0 25px;
}

li {
	margin: 0;
}

h1 {
	font-size: 18px;
	margin: 0 0 4px 0;
	font-family: Verdana;
}

h2 {
	font-family: verdana;
	line-height: 1.2em;
	font-size: 16px;
	margin: 0 0 3px 0;
}

h3 {
	margin: 0 0 2px 0;
	font-family: verdana;
	font-size: 12px;
}
a img {
	border: 0;
}
div#maincontainer {
	width: 880px;
	margin: 0 auto;
	background: #4F4F4F;
	border-left: 1px solid #222;
	border-right: 1px solid #222;
}
div.container {
	width: 820px;
	margin: 0 auto;
	padding: 0px 30px;
}

.clearfix:after {
    content: "."; 
    display: block; 
    height: 0; 
    clear: both; 
    visibility: hidden;
}

.clearfix {display: inline-block;}

/* Hides from IE-mac \*/
* html .clearfix {height: 1%;}
.clearfix {display: block;}
/* End hide from IE-mac */

div#header {
	height: 65px;
	text-align: left;
	background: #757575 url(/images/header.png) repeat-x;
	color: #fff;
	padding: 0;
}
div#header .left {
	padding-top: 10px;
	float: left;
	width: 520px;
	height: 29px;
	margin: 8px 0 0 0;
}
div#header .right {
	float: right;
	width: 260px;
	height: 39px;
	text-align: right;
	margin: 0;
	padding-right: 20px;
}

div#header h1 {
	font-size: 40px;
	font-weight: normal;
}

div.banner {
	background: #fff url(/images/banner_bg.png) repeat-x;
	padding: 0;
	margin: 0;
	height: 221px;
	text-align: center;
}
div.banner a {
	background-color: #FBBD1C;
	color: #333;
	font-weight: bold;
	text-decoration: none;
	padding: 2px 5px;
}
div.banner a:hover {
	background-color: #FED100;
}
div.banner h2 {
	text-transform: uppercase;
	font-size: 18px;
	margin: 0 0 12px 0;
}

div.banner p {
	font-family: georgia;
	font-size: 16px;
}

div.banner .left {
	float: left;
	width: 530px;
	text-align: left;
	padding-top: 25px;
}
div.banner .right {
	float: right;
	text-align: right;
	width: 260px;
	height: 221px;
	padding-right: 20px;
}

div.meta {
	padding: 0;
	color: #eee;
}
div.meta a {
	color: #fff;
	font-weight: bold;
	text-decoration: none
}
div.meta a:hover {
	background-color: #FED100;
	color: #666;
}
div.meta ul {
	list-style: none;
	margin: 0 0 10px 0;
	padding-left: 1em;
	text-indent: -1em;
}
div.meta li {
	padding-bottom: 2px;
}
div.meta h2 {
	font-size: 18px;
	color: #FBBD1C;
	margin: 0 0 10px 0;
	text-transform: uppercase;
}
div.meta .left {
	float: left;
	width: 530px;
	text-align: left;
	margin-top: 20px;
}
div.meta .right {
	float: right;
	text-align: right;
	width: 260px;
	padding-right: 20px;
}
div.meta .left ul {
	float: left;
}
div.meta .left li.listhead {
	font-weight: bold;
	color: #FED100;
}
div.meta span.highlight {
	background: #666;
}

div.projects {
	padding: 20px 0 0 0;
	margin: 10px 0 0 0;
	border-top: 1px solid #757575;
}
div.projects .projectlist {
	text-align: center;
	padding-top: 10px;
}
div.projects .projectlist .project {
	float: left;
	width: 180px;
	margin: 0 10px;
}
div.projects .projectlist .project img{
	border: 2px solid #666;
}

div.projects .projectlist .addproject {
	float: left;
	width: 180px;
	height: 180px;
	margin: 0 10px;
	text-align: center;
	font-size: 16px;
	line-height: 180px;
	border: 2px solid #666;
	background: #333;
}
div.projects .projectlist .addproject a {
	padding: 5px;
}

div.projects .projectlist .project h3 {
	text-transform: uppercase;
}
div.projects .projectlist .project p {
	font-size: 10px;
}
div#footer {
	padding: 15px 0 3px 0;
	margin-top: 20px;
	background: #000;
	color: #F4961F;
	text-align: right;
}
div#footer p {
	font-size: 10px;
}
div#footer a {
	color: #FBBD1C;
	text-decoration: none;
}
div#footer a:hover {
	color: #FED100;
}